{
  "name": "ink-engine",
  "version": "0.1.0",
  "description": "Process documents as W3C Publications",
  "license": "Apache-2.0",
  "scripts": {
    "lint": "healthier && prettier --write --plugin-search-dir=. '**/*.{js,json,css,yml,svelte}'",
    "pretest": "npm run lint",
    "prepublishOnly": "npm run lint",
    "test": "THUMBSIZE=400 THUMBPATH=thumbnails tap tests/*.test.js  --timeout=100 --coverage-report=text --coverage-report=lcov",
    "snapshots": "THUMBSIZE=400 THUMBPATH=thumbnails TAP_SNAPSHOT=1 npm run test && prettier --write --plugin-search-dir=. '**/*.{js,json,css,yml,svelte}'"
  },
  "engines": {
    "node": ">10"
  },
  "healthier": {
    "ignore": [
      "__sapper__",
      "rollup.config.js"
    ]
  },
  "dependencies": {
    "canvas": "^2.7.0",
    "cheerio": "^1.0.0-rc.5",
    "dompurify": "^2.2.7",
    "hast-util-from-dom": "^2.0.5",
    "hast-util-has-property": "^1.0.4",
    "hast-util-is-element": "^1.1.0",
    "hast-util-sanitize": "^3.0.2",
    "hast-util-select": "^3.0.1",
    "hast-util-to-text": "^1.0.1",
    "hastscript": "^5.1.2",
    "jsdom": "^15.2.1",
    "mammoth": "^1.5.1",
    "mime": "^2.5.2",
    "nlcst-to-string": "^2.0.4",
    "pdfjs-dist": "^2.6.347",
    "postcss": "^7.0.35",
    "postcss-prefix-selector": "^1.8.0",
    "postcss-selector-parser": "^6.0.4",
    "postcss-value-parser": "^4.1.0",
    "property-information": "^5.6.0",
    "rehype-annotate": "github:RebusFoundation/rehype-annotate",
    "rehype-sanitize": "^4.0.0",
    "rehype-slug": "^2.0.3",
    "rehype-stringify": "^6.0.1",
    "remark-rehype": "^7.0.0",
    "retext-keywords": "^5.0.0",
    "retext-latin": "^2.0.4",
    "retext-pos": "^2.0.2",
    "rimraf": "^3.0.2",
    "sharp": "^0.23.4",
    "srcset": "^2.0.1",
    "svgo": "^1.3.2",
    "to-vfile": "^6.1.0",
    "unified": "^8.4.2",
    "unist-util-size": "^1.1.1",
    "unist-util-visit": "^2.0.3",
    "unzipper": "^0.10.11",
    "valid-data-url": "^2.0.0",
    "vfile": "^4.2.1"
  },
  "devDependencies": {
    "babel-eslint": "^10.1.0",
    "healthier": "3.2.0",
    "prettier": "1.19.1",
    "tap": "^14.11.0",
    "typescript": "^3.9.9"
  }
}
